@model Models.User.UserResetPasswordViewModel

@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Reset Password";
}

<div class="d-flex justify-content-center align-items-center">
    <div class="ui-w-60">
        <div class="w-100 position-relative" style="padding-bottom: 54%">
            Iban Scanner
        </div>
    </div>
</div>
<form asp-controller="user" asp-action="ResetPassword" asp-antiforgery="true" method="POST" class="resetpassword-form my-5">
    <input type="hidden" asp-for="UserId">
    <input type="hidden" asp-for="ResetToken">
    <div class="form-group">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="PasswordConfirm" class="form-label"></label>
        <input asp-for="PasswordConfirm" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary btn-block">Reset Password</button>
</form>