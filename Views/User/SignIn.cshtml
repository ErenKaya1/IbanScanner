@model Models.User.UserSignInViewModel

@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
}

@if (TempData["SignUpMessage"] != null)
{
    <div class="alert alert-info"><b>@TempData["SignUpMessage"]</b></div>
}

<div class="d-flex justify-content-center align-items-center">
    <div class="ui-w-60">
        <div class="w-100 position-relative" style="padding-bottom: 54%">
            Iban Scanner
        </div>
    </div>
</div>
<form asp-controller="user" asp-action="signin" asp-antiforgery="true" method="POST" class="signin-form my-5">
    <div class="form-group">
        <label asp-for="Username" class="form-label"></label>
        <input asp-for="Username" class="form-control">
    </div>
    <div class="form-group">
        <label class="form-label d-flex justify-content-between align-items-end">
            <div>Password</div>
            <a asp-controller="user" asp-action="ForgotPassword" class="d-block small">Forgot Password?</a>
        </label>
        <input asp-for="Password" class="form-control">
    </div>
    <div class="d-flex justify-content-between align-items-center m-0">
        <label class="custom-control custom-checkbox m-0">
            <input asp-for="RememberMe" class="custom-control-input">
            <span class="custom-control-label">Remember me</span>
        </label>
        <button type="submit" class="btn btn-primary">Sign In</button>
    </div>
</form>
<div class="text-center text-muted">
    Don't have an account yet? <a asp-controller="user" asp-action="SignUp">Sign Up</a>
</div>